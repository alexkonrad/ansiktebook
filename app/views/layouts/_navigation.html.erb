<% if logged_in? %>
  <div class="navbar logged-in">
    <a href="<%= static_pages_url %>">Facebook</a>
    <a href="<%= users_url %>">Users</a>
    <div class="top-right">
      <a href="<%= user_friend_requests_url(current_user) %>">Friend Requests</a>
      <a href="<%= user_notifications_url(current_user) %>">Notifications</a>
      <a href="<%= edit_user_url(current_user) %>">Settings</a>
      <%= button_to "Sign Out", session_url, method: :delete %>
    </div>
  </div>
<% else %>
  <div class="navbar logged-out">
    <a href="<%= static_pages_url %>">Facebook</a>
    <a href="<%= new_user_url %>">Sign Up</a>
    <form action="<%= session_url %>" method="post">

      <%= auth_token %>

      <label for="user_email">Email</label>
      <input type="email"
             name="user[email]"
             value="<%= @user.email %>"
             id="user_username">

      <label for="user_password">Password</label>
      <input type="password"
             name="user[password]"
             id="user_password">

      <input type="submit"
             value="Sign In">
    </form>
  </div>
<% end %>