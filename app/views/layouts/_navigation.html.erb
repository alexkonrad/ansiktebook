<% if logged_in? %>

  <%= button_to "Sign Out", session_url, method: :delete %>

<% else %>

  <%= link_to "Sign Up", new_user_url %>

  <form action="<%= session_url %>" method="post">

    <%= auth_token %>

    <label for="user_email">Email</label>
    <input type="email"
           name="user[email]"
           value="<%= @user.email %>"
           id="user_username">

    <label for="user_password">Password</label>
    <input type="password"
           name="user[password]"
           id="user_password">

    <input type="submit"
           value="Sign In">

  </form>

<% end %>