<!DOCTYPE html>
<html>
<head>
  <title>Ansiktebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <style>

  </style>
</head>
<body>
  <div class="navbar-wrapper">
  	<div class="navbar">
  	  <%= render "layouts/navigation", object: @user %>
  	</div>
  </div>
  <div class="errors">
    <%= render "layouts/errors" %>
  </div>

  <div class="wrapper group">
    <%= yield %>
  </div>

  <% if logged_in? %>
  <script>
    $(document).ready(function(){
      event.preventDefault();
      Facebook.initialize();

      $('.notifications-button').on("click", function(event) {
        event.preventDefault();
        $('.notifications').toggleClass('show-notifications');
      });
    });
  </script>
  <% end %>
</body>
</html>
