<style>
.flashes {
  margin: 20px 0;
}
.errors {
  color: red;
}

.notices {
  color: green;
}

</style>
<div class="flashes">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>

      <strong class="errors"><%= error %></strong><br>

    <% end %>
  <% end %>

  <% if flash[:notices] %>
    <% flash[:notices].each do |notice| %>

      <strong class="notices"><%= notice %></strong><br>

    <% end %>
  <% end %>
</div>